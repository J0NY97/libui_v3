NAME = libui.a
SRCS = \
       ./ui_element.c \
       ./ui_button.c \
       ./ui_label.c \
       ./ui_menu.c \
       ./ui_checkbox.c \
       ./ui_dropdown.c \
       ./ui_slider.c \
       ./ui_input.c \
       ./ui_tab.c \
       ./ui_radio.c \
       ./ui_window.c \
       ./ui_layout.c \
       ./ui_texture.c \
       ./ui_load.c \
       ./ui_help.c \
       ./ui_vec.c \

OBJS = $(SRCS:.c=.o)

all: $(NAME)

SDL_DIR		:= libs/SDL
SDL_INC		:= -I$(SDL_DIR)/include

$(NAME): $(SRCS)
	#@sh bui_path_win.sh
	@gcc -c $(SRCS) \
		-Ilibs/libpf \
		-Ilibs/libft \
		$(SDL_INC)
	@ar rc $(NAME) $(OBJS)
	@ranlib $(NAME)
	@echo "$(NAME) was successfully created."

clean:
	@rm -f $(OBJS)
	@echo "$(NAME) was cleaned."

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean



