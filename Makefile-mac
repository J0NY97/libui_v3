NAME = libui.a
SRCS = ./ui_element.c \
       ./ui_button.c \
       ./ui_label.c \
       ./ui_menu.c \
       ./ui_checkbox.c \
       ./ui_dropdown.c \
       ./ui_slider.c \
       ./ui_input.c \
       ./ui_tab.c \
       ./ui_scrollbar.c \
       ./ui_radio.c \
       ./ui_window.c \
       ./ui_layout.c \
       ./ui_recipe.c \
       ./ui_texture.c \
       ./ui_text_align.c \
       ./ui_init.c \
       ./ui_help.c \
       ./ui_list.c \
       ./ui_surface.c \
       ./ui_vec.c \

OBJS = $(SRCS:.c=.o)
JOHNNY = $(SRCS:.c=.d)

LIB_FOLDER	:= ../
SDL_DIR		:= $(LIB_FOLDER)/SDL_Frameworks
SDL_MAIN	:= -I$(SDL_DIR)/SDL2.framework/Headers
SDL_IMAGE	:= -I$(SDL_DIR)/SDL2_image.framework/Headers
SDL_TTF		:= -I$(SDL_DIR)/SDL2_ttf.framework/Headers
SDL_INC		:= $(SDL_MAIN) $(SDL_IMAGE) $(SDL_TTF) -F$(SDL_DIR)

ODIR = .
CDIR = .

$(ODIR)/%.o: $(CDIR)/%.c
	@gcc -c $< -o $@ -MMD \
		-I$(LIB_FOLDER)/libpf \
		-I$(LIB_FOLDER)/libft \
		$(SDL_INC)
	@printf $(YELLOW)"\e[F\e[JCompiling $<\n"$(RESET)

$(NAME): $(OBJS)
	@sh ui_path_mac.sh
	@ar rc $(NAME) $(OBJS)
	@ranlib $(NAME)
	@echo "$(NAME) was successfully created."

clean:
	@rm -f $(OBJS)
	@rm -f $(JOHNNY)
	@echo "$(NAME) was cleaned."

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean
