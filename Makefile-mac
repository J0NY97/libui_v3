RED		:= "\e[0;31m"
GREEN	:= "\e[0;32m"
YELLOW	:= "\e[0;33m"
BLUE	:= "\e[0;34m"
MAGENTA	:= "\e[0;35m"
CYAN	:= "\e[0;36m"
RESET	:= "\e[0m"

SRCS = ui_element.c\
       ui_button.c\
       ui_label.c\
       ui_menu.c\
       ui_checkbox.c\
       ui_dropdown.c\
       ui_slider.c\
       ui_input.c\
       ui_tab.c\
       ui_scrollbar.c\
       ui_radio.c\
       ui_window.c\
       ui_layout.c\
       ui_recipe.c\
       ui_texture.c\
       ui_text_align.c\
       ui_init.c\
       ui_help.c\
       ui_list.c\
       ui_surface.c\
       ui_vec.c

NAME = libui.a
ODIR = obj
CDIR = .
OBJS = $(addprefix $(ODIR)/,$(SRCS:.c=.o))
JOHNNY = $(SRCS:.c=.d)
CFLAGS = -MMD #-Wall -Wextra

LIB_DIR =		../
INCLUDES =		-I $(LIB_DIR)/libft \
				-I $(LIB_DIR)/libpf \
				-I $(LIB_DIR)/SDL_Frameworks/SDL2.framework/Headers \
				-I $(LIB_DIR)/SDL_Frameworks/SDL2_image.framework/Headers \
				-I $(LIB_DIR)/SDL_Frameworks/SDL2_ttf.framework/Headers \
				-F $(LIB_DIR)/SDL_Frameworks

all: thing $(ODIR) $(NAME)
	@printf ${GREEN}"\e[J> $(NAME) ready!\n"${RESET}

$(ODIR):
	@mkdir -p $@

-include $(JOHNNY)

thing:
	@sh ./ui_path_mac.sh

$(ODIR)/%.o: $(CDIR)/%.c
	@printf $(YELLOW)"\e[JCompiling $<\n\e[F"$(RESET)
	@gcc -c $< -o $@ $(INCLUDES) $(CFLAGS) $(SDL_INC)

$(NAME): $(OBJS)
	@ar rc $(NAME) $(OBJS)
	@ranlib $(NAME)

clean: 
	@printf ${CYAN}"[INFO] Removing objs.\n"${RESET}
	@rm -rf $(ODIR)

fclean: clean
	@printf ${CYAN}"[INFO] Removing $(NAME)\n"${RESET}
	@rm $(NAME)

re: fclean all

.PHONY: fclean all clean re $(NAME)
